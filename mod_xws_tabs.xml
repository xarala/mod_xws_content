<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">

	<name>xws_tabs</name>
	<author>Xarala Web Studios</author>
	<creationDate>May 2010</creationDate>
	<copyright>Copyright (C) 2010 Xarala Web Studios. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>dev-team@@xarala.sn</authorEmail>
	<authorUrl>www.xarala.sn</authorUrl>
	<version>0.0.4</version>
	<description>xws tabs is a component by Xarala Web Studios</description>
	
	<files>
		<filename module="mod_xws_tabs">index.html</filename>
		<filename module="mod_xws_tabs">helper.php</filename>
		<filename module="mod_xws_tabs">mod_xws_tabs.php</filename>
    <folder>css</folder>
    <folder>elements</folder>
    <folder>js</folder>
    <folder>tmpl</folder>
	</files>
	
  <languages folder="language/en-GB">
		<language tag="en-GB">en-GB.mod_xws_tabs.ini</language>
  </languages>
	
	<params addpath="/modules/mod_xws_tabs/elements/">
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="getTemplate" type="moduletemplate" modulename="mod_xws_tabs" default="accordion" label="XWS_CONTENT_GET_TEMPLATE_LABEL" description="XWS_CONTENT_GET_TEMPLATE_DESC" />
		<param name="load_assets" type="radio" default="1" label="XWS_CONTENT_LOAD_ASSETS_LABEL" description="XWS_CONTENT_LOAD_ASSETS_DESC">
			<option value="1">yes</option>
			<option value="0">no</option>
		</param>
		<param name="getStyle" type="csstemplate" modulename="mod_xws_tabs" default="base" label="XWS_CONTENT_GET_STYLE_LABEL" description="XWS_CONTENT_GET_STYLE_DESC" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="show_front" type="radio" default="1" label="XWS_CONTENT_SHOW_FRONT_LABEL" description="XWS_CONTENT_SHOW_FRONT_DESC">
			<option value="1">show</option>
			<option value="0">hide</option>
		</param>
		<param name="count" type="text" default="5" label="XWS_CONTENT_COUNT_LABEL" description="XWS_CONTENT_COUNT_DESC" />
		<param name="catid" type="category" default="" label="XWS_CONTENT_CATID_LABEL" description="XWS_CONTENT_CATID_DESC" />
		<param name="secid" type="section" default="" label="XWS_CONTENT_SECID_LABEL" description="XWS_CONTENT_SECID_DESC" />
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="1" label="XWS_CONTENT_CACHING_LABEL" description="XWS_CONTENT_CACHING_DESC">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="XWS_CONTENT_CACHE_TIME_LABEL" description="XWS_CONTENT_CACHE_TIME_DESC" />
	</params>
</install>
